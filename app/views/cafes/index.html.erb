<% if !current_user %>
  <h1>Sign in to create a cafe!</h1>
<% else %>

  <% if current_user.cafes %>
    <h1>Your CafÃ©<% if current_user.cafes.length > 1 %>s<% end %>!</h1>
    <ul>
      <% current_user.cafes.each do |cafe| %>
      <li><%= link_to cafe.name, cafe %></li>
      <% end %>
    </ul>
  <% end %>

  <% if !current_user.cafes || current_user.id == 1 %>
    <%= button_to "Create a new cafe", new_cafe_path, :method => :get %>
  <% end %>

  <h1>The Cats!</h1>
  <ul>
    <% @cats.each do |cat| %>
    <li><%= link_to cat.name, cat %></li>
    <% end %>
  </ul>

  <% if current_user.id == 1 %>
    <%= button_to "Create a new cat", new_cat_path, :method => :get %>
  <% end %>

<% end %>
