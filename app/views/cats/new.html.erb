<h1>Create a New Cat</h1>

<%= form_for @cat, url: {action: "create"} do |f| %>
  <p>
    <%= label_tag(:name, "Name:") %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= label_tag(:age, "Age:") %>
    <%= f.number_field :age %>
  </p>
  <p>
    <%= label_tag(:gender, "Gender:") %>
    <%= radio_button_tag(:gender, "f") %>
    <%= label_tag(:gender, "Female") %>
    <%= radio_button_tag(:gender, "m") %>
    <%= label_tag(:gender, "Male") %>
  </p>
  <p>
    <%= label_tag(:breed, "Breed:") %>
    <%= f.text_field :breed %>
  </p>
  <p>
    <%= label_tag(:color, "Color:") %>
    <%= f.text_field :color %>
 </p>
 <p>
    <%= label_tag(:personality, "Personality:") %>
    <%= f.text_field :personality %>
  </p>
  <p>
    <%= f.submit "Create Cat" %>
  </p>
<% end %>
